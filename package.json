  "devDependencies": {
    "eslint": "5.3.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.9.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": ">=1",
    "jest": "^24.8.0",
    "link-module-alias": "^1.2.0",
    "lint-staged": ">=8",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
