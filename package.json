{
  "name": "node-boilerplate",
  "version": "0.0.1",
  "repository": {
    "url": "https://github.com/jjangga0214/node-boilerplate"
  },
  "main": "index.js",
  "author": "@jjangga0214",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "engineStrict": true,
  "scripts": {
