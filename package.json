{
  "name": "node-boilerplate",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:jjangga0214/node-boilerplate.git"
  },
  "bugs": {
    "url": "https://gitlab.com/jjangga0214/node-boilerplate"
  },
  "homepage": "https://gitlab.com/jjangga0214/node-boilerplate",
  "main": "index.js",
  "author": {
    "name": "Gil B. Chan",
    "email": "bnbcmindnpass@gmail.com",
    "url": "https://gitlab.com/jjangga0214"
  },
  "license": "MIT",
  "keywords": [
    "boilerplate",
    "scaffold",
    "skeleton"
  ],
  "engines": {
    "node": "12.x"
  },
  "engineStrict": true,
  "scripts": {
    "postinstall": "link-module-alias",
    "release": "HUSKY_SKIP_HOOKS=1 standard-version",
    "husky-skip": "HUSKY_SKIP_HOOKS=1",
    "lint": "yarn lint:js:all && yarn lint:md:all",
    "lint:js:all": "yarn lint:js .",
    "lint:js": "yarn lint:js:pure --fix",
    "lint:js:pure": "eslint --ext js --ext md",
    "lint:md:all": "yarn lint:md .",
    "lint:md": "markdownlint --ignore node_modules --ignore .git --ignore CHANGELOG.md",
    "test": "jest",
    "test:unit": "yarn test test/unit",
    "test:integration": "yarn test test/integration",
    "test:coverage": "yarn test --coverage",
    "test:unit:coverage": "yarn test:coverage test/unit",
    "test:integration:coverage": "yarn test:coverage test/integration",
    "test:ci:common": "yarn test:coverage --ci --reporters='jest-junit'",
    "start": "node index.js"
  },
  "_moduleAliases": {
    "~": ".",
    "#": "src"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "5.3.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.9.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": ">=1",
    "jest": "^24.8.0",
    "jest-junit": "^7.0.0",
    "link-module-alias": "^1.2.0",
    "lint-staged": ">=8",
    "markdownlint-cli": "^0.17.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "standard-version": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:js",
      "git add"
    ],
    "*.md": [
      "yarn lint:md",
      "git add"
    ]
  }
}
